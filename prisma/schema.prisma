generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String   @unique
  admin     Boolean  @default(false)
  avatarUrl String?
  communications Communication[]
  @@index([email])
}

model Building {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  address1           String     @unique
  address2           String?
  name               String
  dateFounded        DateTime?
  city               String
  municipality       String
  country            String     @default("US")
  postalCode         String
  avatarUrl          String?
  description        String?
  documents          Document[]
  projects           Project[]
  units              Unit[]
  owners             Owner[]
  vendors            Vendor[]
  communications     Communication[]
  budgets            Budget[]
  assessments        SpecialAssessment[]
  @@index([name, address1])
  @@index([address1])
}

model Unit {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  address            String
  buildingId         Int
  building           Building  @relation(fields:[buildingId], references: [id])
  buildingPercentage Float?
  residents          Resident[]
  owners             Owner[]
  fees               Fee[]
  assessments        SpecialAssessment[]
  parkingSpots       Parking[]
  @@index([address, buildingId])
}

model Parking {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  location           String
  unitId             Int
  cars               Car[]
  unit               Unit       @relation(fields:[unitId], references: [id])
  residents          Resident[]
}

model Car {
  id                 Int        @id @default(autoincrement())
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  make               String
  color              String
  licensePlate       String
  parkingId          Int
  parkingSpot        Parking @relation(fields: [parkingId], references: [id]) 
}

model Owner {
  id                Int        @id @default(autoincrement())
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  buildingId        Int
  building          Building  @relation(fields:[buildingId], references: [id])
  units             Unit[]
  role              OwnerRole  @default(MEMBER)
  name              String
  birthDate         DateTime?
  avatarUrl         String?
  email             String?
  phone             String?
  partOfBoard       Boolean   @default(false)
  proxies           String[]
  residents         Resident[]
  documents         Document[]
  communications    Communication[]
  committees        Committee[]
  approvedInvoices  Invoice[]
  approvedVendors   Vendor[]
  approvedProjects  Project[]
  approvedBudgets   Budget[]
  approvedFees      Fee[]
  approvedSpecialAssessment SpecialAssessment[]
  contactCards      ContactCard[]
  @@index([email])
}

model ContactCard {
  id                Int        @id @default(autoincrement())
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  contactName       String
  address1          String?
  address2          String?
  city              String?
  municipality      String?
  muncipalCode      String?
  country           String?
  email             String?
  phone             String?
  primary           Boolean    @default(false)
  ownerId           Int?      
  owner             Owner?     @relation(fields: [ownerId], references: [id])
}

enum OwnerRole {
  MEMBER
  PRESIDENT
  TREASURER
  SECRETARY
  BOARD_ASSOCIATE
}

model Resident {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  unit       Unit     @relation(fields: [unitId], references: [id])
  unitId     Int
  name       String
  email      String?
  phone      String?
  isOwner    Boolean   @default(true)
  landLord   Owner?   @relation(fields: [landLordId], references: [id])
  landLordId Int?
  avatarUrl   String?
  communications Communication[]
  parkingSpots  Parking[]
  fees          Fee[]
}

model Vendor {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  avatarUrl   String?
  mainContact String
  email       String?
  phone       String?
  address     String?
  invoices    Invoice[]
  preferred   Boolean  @default(false)
  projectId   Int?
  project     Project? @relation(fields:[projectId], references: [id])
  communications Communication[]
  budgetItemId  Int?
  budgetItem    BudgetItem? @relation(fields: [budgetItemId], references: [id])
  buildingId         Int?
  building           Building?  @relation(fields:[buildingId], references: [id])
  approvers     Owner[]
}

model Invoice {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  paidAt      DateTime
  amount      Float
  vendorId    Int
  text        String
  vendor      Vendor @relation(fields:[vendorId], references:[id])
  budgetItemId Int?
  budgetItem  BudgetItem? @relation(fields:[budgetItemId], references: [id])
  specialAssessmentId Int?
  specialAssessment SpecialAssessment? @relation(fields:[specialAssessmentId], references: [id])
  documents   Document[]
  approvers   Owner[]
}

model Committee {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  type        CommitteeType @default(BOARD)
  description String?
  admin       Boolean  @default(true)
  members     Owner[]
}

enum CommitteeType {
  BOARD
  GRIEVANCE
  BUDGET
  SPECIAL
  OTHER
}


model Document {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  invoiceId   Int?
  ownerId     Int?
  invoice     Invoice? @relation(fields:[invoiceId], references:[id])
  owner       Owner? @relation(fields:[ownerId], references:[id])
  taskId      Int?
  task        Task? @relation(fields:[taskId], references: [id])
  projectId   Int?
  project     Project? @relation(fields:[projectId], references: [id])
  specialAssessmentId Int?
  specialAssessment SpecialAssessment? @relation(fields:[specialAssessmentId], references: [id])
  url             String
  name            String
  type            DocumentType @default(TEXT)
  description     String?
  budgetSheetId   Int? @unique
  budgetSheet     Budget? @relation(name: "BudgetSheet", fields:[budgetSheetId], references: [id])
  budgetId        Int?
  budget          Budget? @relation(fields:[budgetId], references: [id])
  buildingId      Int?
  building        Building?  @relation(fields:[buildingId], references: [id])
  @@index([url])
}

enum DocumentType {
  PICTURE
  VIDEO
  TEXT
}


model Project {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  startedAt   DateTime?
  dueAt       DateTime?
  completed   Boolean   @default(false)
  title       String
  description String?
  vendors     Vendor[]
  tasks       Task[]
  documents   Document[]
  approvers   Owner[]
  budgetedCost Float?
  buildingId         Int
  building           Building  @relation(fields:[buildingId], references: [id])
}

model Task {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String
  description String?
  completed   Boolean   @default(false)
  dueAt       DateTime?
  startedAt   DateTime?
  projectId   Int
  parents     Task[]    @relation("TaskGraph")
  children    Task[]    @relation("TaskGraph")
  project     Project   @relation(fields:[projectId], references:[id])
  documents   Document[]
  @@index([projectId])
}

model Communication {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  subject     String
  content     String?
  from        String
  to          String
  cc          String[]
  userId      Int
  user        User  @relation(fields:[userId], references:[id])
  vendorId    Int?
  vendor      Vendor? @relation(fields:[vendorId], references: [id])
  ownerId     Int?
  owners      Owner?  @relation(fields:[ownerId], references: [id])
  residentId  Int?
  residents   Resident? @relation(fields:[residentId], references: [id])
  method      CommunicationMethod  @default(EMAIL)
  specialAssessmentId Int?
  specialAssessment SpecialAssessment? @relation(fields:[specialAssessmentId], references: [id])
  buildingId         Int?
  building           Building?  @relation(fields:[buildingId], references: [id])
}

model Budget {
  id                  Int       @id @default(autoincrement())
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  buildingId         Int
  building           Building  @relation(fields:[buildingId], references: [id])
  year                Int
  fiscalStart         DateTime
  fiscalEnd           DateTime
  allocatedExpense    Float?
  currentExpense      Float?
  receivedIncome      Float?
  expectedIncome      Float?
  approvedOn          DateTime?
  budgetItems         BudgetItem[]
  sheet               Document?  @relation("BudgetSheet")
  documents           Document[]
  approvers           Owner[]          
}

model BudgetItem {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  allocated     Float?
  received      Float?
  current       Float?
  budgetId      Int?
  budget        Budget?  @relation(fields:[budgetId], references: [id])
  discretionary Boolean @default(true)
  vendors       Vendor[]
  invoices      Invoice[]
}

model Fee {
  id                Int       @id @default(autoincrement())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  schedule          DateTime[]
  payedAt           DateTime?
  amount            Float?
  owedByUnitId      Int?
  owedByUnit        Unit?      @relation(fields: [owedByUnitId], references: [id])
  owedByResidentId  Int?
  owedByResident    Resident? @relation(fields: [owedByResidentId], references: [id])
  contact           String
  notes             String[]
  type              FeeType     @default(MAINTENANCE)
  approvedOn        DateTime?
  payments          Payment[]
  dueAtId           Int
  dueDate           Event? @relation(fields: [dueAtId], references: [id])
  approvers         Owner[]
  isTemplate        Boolean     @default(false)
  @@index([owedByUnitId])
  @@index([owedByResidentId])
}

model Event {
  id                Int       @id @default(autoincrement())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  date              DateTime
  frequency         EventFrequency @default(MONTHLY)
  name              String?
  notes             String?
  isTemplate        Boolean @default(false)
  type              EventType @default(DUE_DATE)
  fees              Fee[]
}

enum EventType {
  DUE_DATE
  START_DATE
}

enum EventFrequency {
  ONE_TIME
  DAILY
  MONTHLY
  QUARTERLY
  YEARLY
}

enum FeeType {
  MAINTENANCE
  THIRD_PARTY
  RULES_VIOLATION
  INTEREST_OWED
  REPARATION
  APPLIED_TO_RESIDENT
  OTHER
}

model Payment {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  amount        Float?
  feeId         Int
  fee           Fee @relation(fields:[feeId], references: [id])
  notes         String[]
  payerId       Int
  payer         Payer @relation(fields:[payerId], references: [id])
  methodId      Int
  method        PaymentMethod @relation(fields:[methodId], references: [id]) 
  @@index([payerId])
  @@index([feeId])
}

model PaymentMethod {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isPrimary     Boolean   @default(true)
  paymentId     Int
  payments      Payment[]
  methodType    PaymentMethodType @default(ACH)
  details       Json
  @@index([paymentId])
}

enum PaymentMethodType {
  ACH
  CHECK
  EPAYMENT
  CREDIT_CARD
  CASH_CHECK
}

model Payer {
  id                Int       @id @default(autoincrement())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  name              String
  email             String?
  address1          String?
  address2          String?
  city              String?
  municipality      String?
  phone             String?
  payments          Payment[]
}

model SpecialAssessment {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  buildingId      Int
  building        Building  @relation(fields:[buildingId], references: [id])
  approvedOn      DateTime
  paymentSchedule DateTime[]
  invoices        Invoice[]
  documents       Document[]
  communications  Communication[]
  total           Float?
  received        Float?
  units           Unit[]
  approvers       Owner[]
}

enum CommunicationMethod {
  EMAIL
  CHAT
  TEXT
  CALL
}